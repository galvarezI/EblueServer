@model IEnumerable<EblueWorkPlan.Models.Roster>

@{
    ViewData["Title"] = "Index";
}

<partial name="_Sidebar2" />


<h1>Index</h1>

<p>
    <a class="btn btn-success" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RosterSegSoc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RosterName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DepartmentId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LocationId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CanBePi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RoleId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RosterSegSoc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RosterName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DepartmentId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LocationId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CanBePi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RoleId)
            </td>
            <td>
                <a class="btn btn-secondary" asp-action="Edit" asp-route-id="@item.RosterId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.RosterId">Details</a> |
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.RosterId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
