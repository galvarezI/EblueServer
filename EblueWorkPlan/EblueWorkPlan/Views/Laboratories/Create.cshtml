@model EblueWorkPlan.Models.Laboratory

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Laboratory</h4>
<hr />

<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="card">

        <div class="card-header">Laboratory </div>


        <div class="card-body">

            <div class="row">

                <div class="form-group">
                    <label asp-for="Areq" class="control-label"></label>
                    <input asp-for="Areq" class="form-control" />
                    <span asp-validation-for="Areq" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="NoSamples" class="control-label"></label>
                    <input asp-for="NoSamples" class="form-control" />
                    <span asp-validation-for="NoSamples" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SamplesDate" class="control-label"></label>
                    <input asp-for="SamplesDate" class="form-control" />
                    <span asp-validation-for="SamplesDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ProjectId" class="control-label"></label>
                    <select asp-for="ProjectId" class="form-control" asp-items="ViewBag.ProjectId"></select>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" asp-controller="Funds" asp-action="Create" />
                </div>


            </div>

        </div>
</form>


