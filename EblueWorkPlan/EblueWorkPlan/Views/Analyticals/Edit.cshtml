            </div>
            <div class="form-group">
                <label asp-for="ProbableDate" class="control-label"></label>
                <input asp-for="ProbableDate" class="form-control" />
                <span asp-validation-for="ProbableDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProjectId" class="control-label"></label>
