@model EblueWorkPlan.Models.Analytical

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Analytical</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AnalyticalId" />
            <div class="form-group">
                <label asp-for="AnalysisRequired" class="control-label"></label>
                <input asp-for="AnalysisRequired" class="form-control" />
