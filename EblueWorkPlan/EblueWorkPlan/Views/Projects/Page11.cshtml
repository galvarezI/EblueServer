                        <th>
                            @Html.DisplayNameFor(model => model.Username)
                        </th>

                        <th>
                            @Html.DisplayNameFor(model => model.AdComments)
                        </th>

                        <th>
                            @Html.DisplayNameFor(model => model.ProjectVigency)
