                                <span asp-validation-for="UserRole" class="text-danger"></span>
                            </div>

                            </div>






                            <div class="form-group">
                                <input id="btnSubmit" type="button" value="Add" class="btn btn-primary" />
                            </div>

                        </div>







                    </div>



                    <div class="card-footer">
                        <div class="btn btn-primary col align-content-center"><a asp-action="Page10" asp-controller="Projects" asp-route-id="@Model.ProjectId" style="text-decoration:none; color:white;">Back</a></div>

                       

                    </div>
            </form>


            <table class="table table-bordered">
