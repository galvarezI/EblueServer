                            </td>
                            <td class="dess">
                                @Html.DisplayFor(modelItem => item.Descriptions)
                            </td>
                            <td class="estimated">
                                @Html.DisplayFor(modelItem => item.TimeEstimated)
                            </td>
                            <td class="facili">
                                @Html.DisplayFor(modelItem => item.FacilitiesNeeded)
                            </td>

                            <td class="facili">
                                @Html.DisplayFor(modelItem => item.CentralLaboratory)
                            </td>

                            <td>
                                <div class="row">
                                    <div class="row">
                                        <div class="col-4">
                                            <button data-id="@item.LabId|@item.WorkPlanned|@item.Descriptions|@item.TimeEstimated|@item.FacilitiesNeeded|@item.ProjectId|@item.CentralLaboratory"
                                                class="btn  btn-success modify">
                                                Modify
                                            </button>
                                        </div>

                                    </div>

                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>



