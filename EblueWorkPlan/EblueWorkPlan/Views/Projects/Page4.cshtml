                                <input id="btnSave" type="button" value="Save" class="btn btn-success btn-save" style="display:none;" />
                            </div>


                        </div>

                    </div>


                    <div class="card-footer">

                        <div class="btn btn-primary col align-content-center"><a asp-action="Page3" asp-controller="Projects" asp-route-id="@Model.ProjectId" style="text-decoration:none; color:white;">Back</a></div>




                        <div class="btn btn-primary col align-content-end"><a asp-action="Page5" asp-controller="Projects" asp-route-id="@Model.ProjectId" style="text-decoration:none; color:white;">Next</a></div>

                    </div>
                </div>
            </form>
            <br />




            <table class="table table-bordered " id="labTable">
                <thead>
                    <h1 class="LabId" style="display:none" class="field-id">@Model.LabId </h1>
                    <tr>

                        <th>
                            @Html.DisplayNameFor(model => model.WorkPlanned)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Descriptions)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.TimeEstimated)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FacilitiesNeeded)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CentralLaboratory)
                        </th>
                        <th>
                            Actions
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.laboratories)
