                                    <label asp-for="FacilitiesNeeded" class="control-label"></label>
                                    <input id="facilitiesNeeded" asp-for="FacilitiesNeeded" class="form-control txt-fn" />
                                    <span asp-validation-for="FacilitiesNeeded" class="text-danger"></span>
                                </div>


                                <div class="col-12">
                                    <label asp-for="CentralLaboratory" class="control-label"></label>
