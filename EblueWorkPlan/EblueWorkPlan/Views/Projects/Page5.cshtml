                                    <input id="btnSave" type="button" value="Save" class="btn btn-success btn-save" style="display:none;" />
                                </div>

                            </div>


                            <div class="card-footer">
                                
                                <div class="btn btn-primary col align-content-center"><a asp-action="Page4" asp-controller="Projects" asp-route-id="@Model.ProjectId" style="text-decoration:none; color:white;">Back</a></div>

                                

                               
