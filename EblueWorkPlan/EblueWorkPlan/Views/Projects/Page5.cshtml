                        <div class="row">
                            <div class="col-4">
                                <button data-id="@item.SciId| @item.ProjectId|@item.RosterId|@item.Credits|@item.Tr|@item.Ca|@item.Ah|@item.SciRolesId"
                                    class="btn  btn-success modify">
                                    Modify
                                </button>

                            </div>
                            
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>


