@using EblueWorkPlan.Models.ViewModels
@model EblueWorkPlan.Models.ViewModels.UserVM

@{
    ViewData["Title"] = "Create";
}

<partial name="_Sidebar2" />


<h1>Create</h1>

<h4>User</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RosterId" class="control-label"></label>
                <select asp-for="RosterId" class="form-control" asp-items=" ViewBag.rosterItems"></select>
            </div>

            <div class="form-group">
                <label asp-for="RolesId" class="control-label"></label>
                <select asp-for="RolesId" class="form-control" asp-items=" ViewBag.rolesItems"></select>
            </div>

            <div class="form-group">
                <label asp-for="RolesId" class="control-label"></label>

                <select id="roles" asp-for="SelectedRolesArray" multiple class="chosen-select form-control" asp-items="ViewBag.rolesItems" data-placeholder="Select multiple options..."></select>

            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {

        <script>
            $(document).ready(function (){
        
                $("#roles").chosen();
       
           });
        </script>



    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
